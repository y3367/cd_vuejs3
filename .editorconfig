root = true

[*]
charset = utf-8

[{**/*,*}.{js,cjs,ts,jsx,tsx,vue,html,css,scss}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
quote_type = double

[*.rs]
indent_size = 4

[*.md]
max_line_length = off
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf

{
  "name": "cd-vuejs3",
  "version": "0.0.1-beta.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16",
    "pnpm": ">=7"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "scripts": {
    "preinstall": "node ./scripts/preinstall.js && npx only-allow pnpm",
    "build": "pnpm build:utils && pnpm build:helpers",
    "build-only": "pnpm build-only:utils && pnpm build-only:helpers",
    "dev:helpers": "pnpm -F helpers dev",
    "build:helpers": "pnpm -F helpers build",
    "build-only:helpers": "pnpm -F helpers build-only",
    "prebuild:helpers": "pnpm -F helpers prebuild",
    "dev:utils": "pnpm -F utils dev",
    "build:utils": "pnpm -F utils build",
    "build-only:utils": "pnpm -F utils build-only",
    "prebuild:utils": "pnpm -F utils prebuild",
    "test": "echo \"Error: no test specified\"",
    "test:unit": "vitest --environment jsdom --root src/",
    "test:e2e": "start-server-and-test preview :4173 'cypress run --e2e'",
    "test:e2e:dev": "start-server-and-test 'vite dev --port 4173' :4173 'cypress open --e2e'",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "format": "prettier --write \"./**/*.{html,vue,ts,js,json,md}\"",
    "changeset": "changeset",
    "ci:version": "changeset version && pnpm install",
    "ci:release": "pnpm changeset publish -r --tag next --registry=https://registry.npmjs.com --no-git-checks --access=public --publish-branch=master && pnpm ci:publish",
    "ci:publish": "pnpm -r publish utils --tag next --registry=https://registry.npmjs.com/ --no-git-checks --access=public --publish-branch=master",
    "prepare": "husky install"
  },
  "dependencies": {
    "cypress": "^12.17.3"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@rushstack/eslint-patch": "^1.3.3",
    "@tsconfig/node20": "^20.1.1",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.10",
    "@typescript-eslint/parser": "^6.3.0",
    "eslint": "^8.47.0",
    "eslint-import-resolver-webpack": "^0.13.4",
    "eslint-plugin-cypress": "^2.14.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "5.0.0",
    "eslint-plugin-vue": "^9.17.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}